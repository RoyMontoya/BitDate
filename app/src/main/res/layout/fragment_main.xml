<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:clipChildren="false"
              tools:context=".MainActivity$PlaceholderFragment">

    <com.example.amado.bitdate.CardStackContainer
        android:id="@+id/card_stack"
        android:clipChildren="false"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_width="270dp"
        android:layout_height="320dp"/>
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/nah_button"
            android:layout_margin="5dp"
            android:src="@drawable/ic_nah"
            android:background="@drawable/nah_button"
            android:text="Nah"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageButton
            android:id="@+id/yeah_button"
            android:layout_margin="5dp"
            android:src="@drawable/ic_yeah"
            android:background="@drawable/yeah_button"
            android:text="Yeah"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </LinearLayout>
</RelativeLayout>